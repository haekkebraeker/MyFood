<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFood.App.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="EAN:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="Anzahl:" FontSize="Medium" />
        <Label Text="{Binding Anzahl}" FontSize="Small"/>
        <Label Text="Ablaufdatum:" FontSize="Medium" />
        <Label Text="{Binding Ablaufdatum}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>